<h1>新規投稿</h1>

<%= form_for(@book, 'book_update') do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>本文</h4>
<%= f.text_area :body %>

<%= f.submit '投稿' %>


<% end %>

<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>

<% end %>